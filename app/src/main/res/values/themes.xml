<resources>
    <!-- Base application theme. -->
    <style name="Theme.Go4Lunch" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/crimson_rust</item>
        <item name="colorPrimaryVariant">@color/pumpkin_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/licorice_gray</item>
        <item name="drawerArrowStyle">@style/Theme.Go4Lunch.DrawerArrowStyle</item>

    </style>

    <style name="Theme.Go4Lunch.LightText">
        <item name="android:textColor">@color/dirty_white</item>
    </style>

    <style name="Theme.Go4Lunch.DarkText">
        <item name="android:textColor">@color/licorice_gray</item>
    </style>

    <!--LOGIN ACTIVITY-->

    <style name="Theme.Go4Lunch.LoginFacebookButton" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/blue_facebook</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Theme.Go4Lunch.LoginGoogleButton" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/red_google</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Theme.Go4Lunch.BackgroundImage">
        <item name="android:windowBackground">@drawable/lunch_background</item>
    </style>

    <!--MAIN ACTIVITY-->
    <style name="Theme.Go4Lunch.BottomNavBar" parent="Widget.Material3.BottomNavigationView">
        <item name="android:gravity">bottom</item>
        <item name="itemTextColor">@drawable/bottom_nav</item>
        <item name="itemIconTint">@drawable/bottom_nav</item>
        <item name="background">@color/pumpkin_orange</item>
    </style>

    <style name="Theme.Go4Lunch.BottomNavBarIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/tinted_gray_translucent</item>
    </style>

    <style name="Theme.Go4Lunch.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/crimson_rust</item>
    </style>

    <style name="Theme.Go4Lunch.DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/dirty_white</item>
    </style>

    <style name="Theme.Go4Lunch.SearchView" parent="Widget.AppCompat.SearchView">

    </style>

    <!--RESTAURANT LIST -->

    <style name="Theme.Go4Lunch.RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/golden_yellow</item>
        <item name="android:progressBackgroundTint">@color/golden_yellow</item>
        <item name="android:secondaryProgressTint">@color/golden_yellow</item>
        <item name="colorControlNormal">@color/golden_yellow</item>
        <item name="colorControlActivated">@color/golden_yellow</item>
        <item name="colorAccent">@color/golden_yellow</item>
        <item name="android:numStars">3</item>
        <item name="android:isIndicator">true</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:rating">0</item>
    </style>

    <!-- RatingBar FOR LOWER API -->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorAccent">@color/golden_yellow</item>
        <item name="colorControlNormal">@color/golden_yellow</item>
    </style>

    <style name="Theme.Go4Lunch.RestaurantList.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="Theme.Go4Lunch.RestaurantListErrorImage">
        <item name="tint">@color/pumpkin_orange</item>

    </style>


    <!--RESTAURANT DETAIL-->
    <style name="Theme.Go4Lunch.DetailRestaurantButtons" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/detail_color_states_material_button</item>
        <item name="iconTint">@color/detail_color_states_material_button</item>
        <item name="iconGravity">top</item>
        <item name="iconSize">26dp</item>
    </style>

    <style name="Theme.Go4Lunch.VeganFriendlyImageView">
        <item name="android:background">@color/white</item>
    </style>


    <style name="Theme.Go4Lunch.LightView">
        <item name="android:background">@color/dirty_white</item>
    </style>

    <style name="Theme.Go4Lunch.DarkView">
        <item name="android:background">@color/pumpkin_orange</item>
    </style>

    <style name="Theme.Go4Lunch.DetailRestaurantLikeButton" parent="Theme.Go4Lunch.DetailRestaurantButtons">
        <item name="iconTint">@color/light_gray</item>
    </style>

    <style name="Theme.Go4Lunch.DetailRestaurantChoseBtn" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="backgroundTint">@color/dirty_white</item>
        <item name="android:textColor">@color/licorice_gray</item>
        <item name="iconTint">@color/crimson_rust</item>
    </style>

</resources>