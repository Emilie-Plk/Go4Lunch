<resources>
    <!-- Base application theme. -->
    <style name="Theme.Go4Lunch" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/crimson_rust</item>
        <item name="colorPrimaryVariant">@color/pumpkin_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.Go4Lunch.RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/reseda_green</item>
        <item name="colorControlActivated">@color/golden_yellow</item>
        <item name="android:numStars">3</item>
    </style>

    <style name="Theme.Go4Lunch.LoginFacebookButton" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/blue_facebook</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
         <item name="iconGravity">textStart</item>
    </style>

    <style name="Theme.Go4Lunch.LoginGoogleButton" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/red_google</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Theme.Go4Lunch.BackgroundImage">
        <item name="android:windowBackground">@drawable/lunch_background</item>
    </style>



    <!-- Base application theme. -->
    <style name="Base.Theme.Go4Lunch" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

    </style>
</resources>