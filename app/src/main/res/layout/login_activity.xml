<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pumpkin_orange_translucent"
    tools:context="com.emplk.go4lunch.ui.login.LoginActivity">

    <ImageView
        android:id="@+id/login_big_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/logo_image"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/google_login_btn"
        android:src="@drawable/logo_no_background" />

    <ImageView
        android:id="@+id/logo_image"
        android:src="@drawable/plate_fork_spoon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        style="@style/Theme.Go4Lunch.LoginGoogleButton"
        android:id="@+id/google_login_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:text="@string/google_btn"
        app:icon="@drawable/google_logo"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintBottom_toTopOf="@+id/facebook_login_btn"
        app:layout_constraintEnd_toEndOf="@+id/facebook_login_btn"
        app:layout_constraintStart_toStartOf="@+id/facebook_login_btn" />

    <Button
        style="@style/Theme.Go4Lunch.LoginFacebookButton"
        android:id="@+id/facebook_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="140dp"
        android:text="@string/facebook_btn"
        app:icon="@drawable/f_icon_reversed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>